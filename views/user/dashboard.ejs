<% layout('layout/boilerplate.ejs') %>

<section class="dashboard">

  <header class="dashboard-header">
    <h1>Developer Dashboard</h1>
    <p class="dashboard-subtext">
      Welcome, <strong><%= user.name %></strong>
    </p>
  </header>

  <!-- =====================
       Apps Section
       ===================== -->
  <section class="dashboard-section">
    <div class="section-header">
      <h2>Your Apps</h2>
      <a href="/apps/new" class="btn-primary btn-sm">
        + New App
      </a>
    </div>

    <% if (apps.length === 0) { %>
      <!-- Empty State -->
      <div class="empty-state">
        <h3>No apps yet</h3>
        <p>
          Create your first app to start authenticating users with AuthWay.
        </p>
        <a href="/apps/new" class="btn-primary">
          Create Your First App
        </a>
      </div>
    <% } else { %>
      <div class="apps-grid">
        <% apps.forEach(app => { %>
          <div class="card app-card">
            <h3><%= app.name %></h3>

            <% if (app.description) { %>
              <p class="text-muted"><%= app.description %></p>
            <% } %>

            <ul class="info-list">
              <li>
                <strong>Status:</strong>
                <span class="<%= app.isActive ? 'status-active' : 'status-disabled' %>">
                  <%= app.isActive ? 'Active' : 'Disabled' %>
                </span>
              </li>
              <li>
                <strong>Created:</strong>
                <%= app.createdAt.toDateString() %>
              </li>
            </ul>

            <a href="/apps/<%= app._id %>" class="btn-secondary btn-sm">
              Manage App â†’
            </a>
          </div>
        <% }) %>
      </div>
    <% } %>
  </section>

  <!-- =====================
       Account Info
       ===================== -->
  <div class="dashboard-grid">

    <div class="card">
      <h2>Account</h2>
      <ul class="info-list">
        <li><strong>Email:</strong> <%= user.email %></li>
        <li><strong>Plan:</strong> <%= user.plan %></li>
        <li><strong>Joined:</strong> <%= user.createdAt.toDateString() %></li>

        <% if (user.lastLoginAt) { %>
          <li><strong>Last Login:</strong> <%= user.lastLoginAt.toDateString() %></li>
        <% } %>
      </ul>
    </div>

    <div class="card">
      <h2>Quick Actions</h2>
      <ul class="action-list">
        <li>Rotate API Key (coming soon)</li>
        <li>Manage Allowed Origins</li>
        <li>View API Documentation</li>
        <li>Account Settings</li>
      </ul>
    </div>

  </div>

  <form action="/logout" method="POST" class="logout-form">
    <button type="submit" class="btn-danger">
      Logout
    </button>
  </form>

</section>
